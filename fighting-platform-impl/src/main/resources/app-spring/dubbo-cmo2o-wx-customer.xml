<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 生成远程服务代理，可以像使用本地bean一样使用Service -->
	<dubbo:reference id="shoppingCartFacade"
		interface="com.midea.cmo2o.shopping.api.service.ShoppingCartFacade" timeout="5000"/>

	<dubbo:reference id="ticketServiceFacade"
		interface="com.midea.cmo2o.ticket.api.TicketServiceFacade" timeout="5000"/>
		
	<dubbo:reference id="productFacade"
		interface="com.midea.cmo2o.shopping.api.service.ProductFacade" timeout="5000"/>
		
		<dubbo:reference id="activityServiceFacade"
		interface="com.midea.cmo2o.ticket.api.ActivityServiceFacade" timeout="5000"/>
		
	<dubbo:reference id="workerServiceFacade"
		interface="com.midea.cmo2o.ticket.api.WorkerServiceFacade" timeout="5000"/>
</beans>